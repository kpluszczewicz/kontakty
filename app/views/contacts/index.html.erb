<table class="profile">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

      <% # Jeśli nie da się poniżej metody 'get' to nie będzie działać!!! -%>
      <%= button_to 'Dodaj kontakt', new_user_contact_path(@user), :method => :get %>

      <% unless @contacts.empty? -%>
        <table class="contacts">
          <%= render :partial => 'contacts/contact', :collection => @contacts %>
        </table>
        <%= will_paginate @contacts %>
      <% end -%>
    </td>
    <td class="sidebar round">
      <strong>Imię</strong> <%= @user.name %> <br />
      <strong>URL</strong> <%= link_to user_path(@user), @user %> <br />
      <strong>Kontakty</strong> <%= @user.contacts.count %> 
    </td>
  </tr>
</table>
